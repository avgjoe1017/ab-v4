{
  "name": "@ab/mobile-v4",
  "version": "0.0.0",
  "private": true,
  "main": "expo-router/entry",
  "expo": {
    "name": "Affirmation Beats V4",
    "slug": "affirmation-beats-v4",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "ab-v4",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.affirmationbeats.v4"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.affirmationbeats.v4"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router"
    ]
  },
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "echo \"(add eslint if desired)\"",
    "format": "echo \"(add prettier if desired)\""
  },
  "dependencies": {
    "@ab/audio-engine": "workspace:*",
    "@ab/contracts": "workspace:*",
    "@ab/utils": "workspace:*",
    "@expo/metro-runtime": "^6.1.2",
    "@expo/vector-icons": "^15.0.3",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@tanstack/react-query": "^5.59.16",
    "expo": "~54.0.30",
    "expo-asset": "~12.0.12",
    "expo-audio": "~1.1.1",
    "expo-constants": "~18.0.12",
    "expo-font": "~14.0.10",
    "expo-linking": "^8.0.11",
    "expo-router": "~6.0.21",
    "expo-status-bar": "~3.0.0",
    "lucide-react-native": "^0.562.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-purchases": "^9.6.10",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "^5.6.1",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@babel/plugin-proposal-export-namespace-from": "^7.18.9",
    "@types/node": "^25.0.1",
    "@types/react": "~19.1.10",
    "babel-plugin-module-resolver": "^5.0.0",
    "typescript": "^5.6.3"
  }
}
